<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/card_shape"
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="140dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="15dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/pizza_sample" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/food_title"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="Sample text is here you can see this text"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-20dp"
        android:fontFamily="@font/poppins_light"
        android:maxLength="40"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:maxLines="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardView2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/clock_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/cardView2"
        app:layout_constraintTop_toBottomOf="@+id/food_title"
        app:srcCompat="@drawable/clock_icon" />

    <TextView
        android:id="@+id/timeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 mins"
        android:gravity="center"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/black"
        android:layout_marginStart="4dp"
        android:paddingTop="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/clock_img"
        app:layout_constraintStart_toEndOf="@+id/clock_img"
        app:layout_constraintTop_toTopOf="@+id/clock_img" />

    <ImageView
        android:id="@+id/forwardBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="5dp"
        android:padding="5dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/card_btn"
        app:tint="#019267" />


</androidx.constraintlayout.widget.ConstraintLayout>